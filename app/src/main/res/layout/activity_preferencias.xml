<?xml version="1.0" encoding="utf-8"?>

<PreferenceScreen
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <PreferenceCategory android:title="Ajustes">
        <EditTextPreference
            android:key="opcion_nombre_app"
            android:title="Nombre app"
            android:summary="Cómo quieres que se llame la app"
            android:dialogTitle="Introduce un valor" />
        <EditTextPreference
            android:key="opcion_nombre_user"
            android:title="Nombre de usuario"
            android:summary="Cómo quieres que te llame la app"
            android:dialogTitle="Introduce un valor" />
        <SwitchPreference
            android:key="opcion_edicion"
            android:title="Modo edición"
            android:summaryOn="Modo edición activado"
            android:summaryOff="Modo edición desactivado"
            android:switchTextOn="true"
            android:switchTextOff="false"/>
    </PreferenceCategory>
</PreferenceScreen>